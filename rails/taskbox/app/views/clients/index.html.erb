<h3>Listing Client</h3>
<p>Total Clients: <%= @clients.size %></p>

<table border="1">
<thead>
	<tr>
		<th>Sl No</th>
		<th>Name</th>
		<th>Company</th>
		<th>Email</th>
		<th>Projects Count</th>
	</tr>
</thead>
<thody>
    <% @clients.each_with_index do |client,index| %>
    <tr>
    	<td><%= index+1 %></td>
    	<td><%= client.name %></td>
    	<td><%= client.company %></td>
    	<td><%= client.email %></td>
    	<td><%= client.projects.size %></td>
    	<td><%= link_to "Show", client_path(client) %></td>
    </tr>
    <% end %>
</thody>
</table>

<%= link_to "Add_Client", new_client_path %>